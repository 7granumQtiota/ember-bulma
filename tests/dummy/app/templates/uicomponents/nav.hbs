<h1 class="title">Nav</h1>
<h2 class="subtitle">
  A responsive horizontal <strong>nav bar</strong> that can contain links, tabs, buttons, icons, and a logo
</h2>
<hr>

<div class="content">
  <p>
    The <code>nav</code> container can have <strong>3 parts</strong>:
  </p>
  <ul>
    <li><code>bulma-nav-left</code></li>
    <li><code>bulma-nav-center</code></li>
    <li><code>bulma-nav-right</code></li>
  </ul>
  <p>
    For responsiveness, <strong>2 additional</strong> components are available:
  </p>
  <ul>
    <li><code>bulma-nav-toggle</code> for the hamburger menu on mobile</li>
    <li><code>bulma-nav-menu</code> for menu that is collapsable on mobile (you can combine it with <code>nav-right</code>)</li>
  </ul>
</div>


<div class="example with-padding">
  {{#bulma-nav hasShadow=true}}
    {{#bulma-nav-left}}
      <a class="nav-item" href="#">
        <span class="icon">
          <i class="fa fa-book"></i>
        </span>
      </a>
    {{/bulma-nav-left}}

    {{#bulma-nav-center}}
      <a class="nav-item" href="#">
        <span class="icon">
          <i class="fa fa-github"></i>
        </span>
      </a>
      <a class="nav-item" href="#">
        <span class="icon">
          <i class="fa fa-twitter"></i>
        </span>
      </a>
    {{/bulma-nav-center}}

    {{#bulma-nav-toggle onmousedown=(toggle 'toggleNav' this)}}
      <span></span>
      <span></span>
      <span></span>
    {{/bulma-nav-toggle}}

    {{#bulma-nav-right isMenu=true}}
      <a class="nav-item" href="#">
        Home
      </a>
      <a class="nav-item" href="#">
        Documentation
      </a>
      <a class="nav-item" href="#">
        Blog
      </a>

      <span class="nav-item">
        {{bulma-button icon="fa fa-twitter" label="Tweet"}}
        {{bulma-button icon="fa fa-download" label="Download" isPrimary=true}}
      </span>
    {{/bulma-nav-right}}
  {{/bulma-nav}}
  {{#if toggleNav}}
    <br>
    {{#bulma-panel isHiddenDesktop=true isHiddenTablet=true isHiddenWidescreen=true}}
      <a href="#" class="panel-block">Home</a>
      <a href="#" class="panel-block">Documentation</a>
      <a href="#" class="panel-block">Blog</a>
      {{#bulma-panel-block}}
        {{bulma-button icon="fa fa-twitter" label="Tweet"}}
        {{bulma-button icon="fa fa-download" label="Download" isPrimary=true}}
      {{/bulma-panel-block}}
    {{/bulma-panel}}
  {{/if}}

  {{#themed-syntax lang="handlebars"}}
&#123;&#123;#bulma-nav hasShadow=true&#125;&#125;
  &#123;&#123;#bulma-nav-left&#125;&#125;
    &lt;a class="nav-item" href="#"&gt;
      &lt;span class="icon"&gt;
        &lt;i class="fa fa-book"&gt;&lt;/i&gt;
      &lt;/span&gt;
    &lt;/a&gt;
  &#123;&#123;/bulma-nav-left&#125;&#125;

  &#123;&#123;#bulma-nav-center&#125;&#125;
    &lt;a class="nav-item" href="#"&gt;
      &lt;span class="icon"&gt;
        &lt;i class="fa fa-github"&gt;&lt;/i&gt;
      &lt;/span&gt;
    &lt;/a&gt;
    &lt;a class="nav-item" href="#"&gt;
      &lt;span class="icon"&gt;
        &lt;i class="fa fa-twitter"&gt;&lt;/i&gt;
      &lt;/span&gt;
    &lt;/a&gt;
  &#123;&#123;/bulma-nav-center&#125;&#125;

  &#123;&#123;#bulma-nav-toggle onmousedown=(toggle 'toggleNav' this)&#125;&#125;
    &lt;span&gt;&lt;/span&gt;
    &lt;span&gt;&lt;/span&gt;
    &lt;span&gt;&lt;/span&gt;
  &#123;&#123;/bulma-nav-toggle&#125;&#125;

  &#123;&#123;#bulma-nav-right isMenu=true&#125;&#125;
    &lt;a class="nav-item" href="#"&gt;
      Home
    &lt;/a&gt;
    &lt;a class="nav-item" href="#"&gt;
      Documentation
    &lt;/a&gt;
    &lt;a class="nav-item" href="#"&gt;
      Blog
    &lt;/a&gt;

    &lt;span class="nav-item"&gt;
      &#123;&#123;bulma-button icon="fa fa-twitter" label="Tweet"&#125;&#125;
      &#123;&#123;bulma-button icon="fa fa-download" label="Download" isPrimary=true&#125;&#125;
    &lt;/span&gt;
  &#123;&#123;/bulma-nav-right&#125;&#125;
&#123;&#123;/bulma-nav&#125;&#125;

&#123;&#123;#if toggleNav&#125;&#125;
  &#123;&#123;#bulma-panel isHiddenDesktop=true isHiddenTablet=true isHiddenWidescreen=true&#125;&#125;
    &#123;&#123;!...&#125;&#125;
  &#123;&#123;/bulma-panel&#125;&#125;
&#123;&#123;/if&#125;&#125;

  {{/themed-syntax}}
</div>
