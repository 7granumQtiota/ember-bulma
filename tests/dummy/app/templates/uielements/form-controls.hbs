<h3 class="title">States</h3>
<h4 class="subtitle">Loading</h4>
{{#bulma-columns}}
  {{#bulma-column content=true isHalf=true}}
    <p class="control is-loading">
      {{bulma-input placeholder="Loading input" isLoading=true }}
    </p>
    <p class="control is-loading">
      {{bulma-input placeholder="Loading textarea" isLoading=true }}
    </p>
  {{/bulma-column}}
  {{#bulma-column content=true isHalf=true}}
    {{#themed-syntax transparent="true" language="handlebars" }}
&lt;p class="control is-loading"&gt;
  &#123;&#123;bulma-input placeholder="Loading input" isLoading=true &#125;&#125;
&lt;/p&gt;
&lt;p class="control is-loading"&gt;
  &#123;&#123;bulma-input placeholder="Loading textarea" &#125;&#125;
&lt;/p&gt;
    {{/themed-syntax}}
  {{/bulma-column}}
{{/bulma-columns}}
<h4 class="subtitle">Disabled</h4>
{{#bulma-columns}}
  {{#bulma-column content=true isHalf=true}}
    <p class="control">
      {{bulma-input placeholder="Disabled input"  disabled=true}}
    </p>

    <p class="control">
      {{bulma-textarea placeholder="Disabled textarea" disabled=true}}
    </p>

    <p class="control">
      <label class="checkbox is-disabled">
        {{bulma-checkbox disabled=true}}
        Disabled
      </label>
    </p>
    <p class="control">
      {{bulma-radio label="Yes" name="question" type="radio" disabled=true}}
      {{bulma-radio label="No" name="question" type="radio" disabled=true}}
    </p>
    <p class="control">
      {{bulma-button isPrimary=true label="Submit" disabled=true}}
      {{bulma-button label="Cancel" disabled=true}}
    </p>

  {{/bulma-column}}
  {{#bulma-column content=true isHalf=true}}
    {{#themed-syntax transparent="true" language="handlebars" }}
&#123;&#123;bulma-input placeholder="Disabled input"  disabled=true&#125;&#125;

&#123;&#123;bulma-input  placeholder="Disabled textarea" disabled=true&#125;&#125;

&lt;label class="checkbox is-disabled"&gt;
  &#123;&#123;bulma-input type="checkbox"  disabled=true&#125;&#125;
  Disabled
